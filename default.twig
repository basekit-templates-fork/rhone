{% extends "layout.twig" %}

{% block content %}

	<header class="template-header">

		<div class="container">

			{{widget('logo', 'headerlogo', {
				"defaultlogo": asset('images/logo.png')
			})|raw}}

			{{widget('companyname', 'headercompanyname', {
				"business": "profile"
			})|raw}}

			{{widget('extendednavigation', 'headernavigation', {
				"align":"left"
			})|raw}}

			{{widget('line', 'headerline', {})|raw}}

		</div>

	</header>

	{{widget('feature', 'headerfeature', {
		"header": "profile",
		"defaultBgImg": asset('images/feature.png'),
		'positionTopPercentage': '0',
		'showBtn': true,
		buttonText: "Lorem Ipsum"
	})|raw}}



	<section class="template-content">

		{{widget('image', 'sidebarimage', {
			'src': asset('/images/sidebar.jpg')
		})|raw}}

		<div class="container">

			{{zone('main')|raw}}

		</div>

	</section>


	<footer class="template-footer">

		<div class="container">

			{{widget('line', 'footerline', {})|raw}}

			{{widget('logo', 'footerlogo', {
				"defaultlogo": asset('images/logodark.png')
			})|raw}}

			{{widget('profile', 'footerprofile1', {
				"profileType":"strapline",
				"strapline":"profile"
			})|raw}}

			{{widget('profile', 'footerprofile2', {
				"profileType":"copyright",
				"copyright":"profile"
			})|raw}}

		</div>

	</footer>


{% endblock %}